<h2>配送先登録/一覧</h2>

<%= form_with model: @address, url: addresses_path, local: true, method: :post do |f| %>

  <div>
  郵便番号（ハイフンなし）
  <%= f.text_field :post_code, placeholder: "0000000" %>
  </div>

  <div>
  住所
  <%= f.text_field :address, placeholder: "東京都渋谷区神園町0-0" %>
  </div>

  <div>
  宛名
  <%= f.text_field :name, placeholder: "令和道子" %>
  </div>

  <%= f.submit "新規登録" %>

<% end %>


<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.post_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td>
        <%= link_to "編集する", edit_address_path(address) %>
        <%= link_to "削除する", address_path(address), method: :delete, deta: { confirm: "本当に削除しますか？" } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>