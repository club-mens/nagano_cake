<h2>新規会員登録</h2>


<%= form_with model: resource, url: new_customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>


  <div class="field">
    メールアドレス
    <%= f.email_field :email, placeholder: "sample@example.com", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    郵便番号（ハイフンなし）
    <%= f.text_field :post_code, placeholder: "0000000", autofocus: true, autocomplete: "post_code" %>
  </div>

  <div class="field">
    住所
    <%= f.text_field :address, placeholder: "東京都渋谷代々木神園町0-0", autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    電話番号（ハイフンなし）
    <%= f.text_field :phone_number, placeholder: "00000000000", autofocus: true, autocomplete: "phone_number" %>
  </div>

  <div class="field">
  
    <% if @minimum_password_length %>
    (パスワード<%= @minimum_password_length %>文字以上)
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    パスワード（確認用）
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>

<h4><%= link_to "こちら", new_customer_session_path %> からログインしてください。</h4>

<%= render "public/shared/links" %>
