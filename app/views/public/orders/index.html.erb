<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-10 px-5 px-sm-0 mx-auto">
      <h2>注文履歴一覧</h2>
      <table class="table table-bordered">
        <thread>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thread>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <th><%= order.created_at.strftime('%Y/%m/%d') %></th>
              <th><%= order.order_address_display %><br><%= order.name %></th>
              <th>
                <% order.order_items.all.each do |order_item| %>
                  <%= order_item.item.name %>
                  <br>
                <% end %>
              </th>
              <th><%= order.total_price.to_s %>円</th>
              <th><%= order.status_i18n %></th>
              <th><%= link_to '表示する', order_path(order.id), class:'btn btn-info' %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>