<div class="container">
  <h2>注文履歴詳細</h2>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-8 px-5 px-sm-0">
      <h3>注文情報</h3>
      <table class="table">
        <tbody>
          <tr>
            <th>注文日</th>
            <th><%= @order.created_at.strftime('%Y/%m/%d') %></th>
          </tr>
          <tr>
            <th>配送先</th>
            <th><%= @order.post_code %><%= @order.address %><%= @order.name %></th>
          </tr>
          <tr>
            <th>支払方法</th>
            <th><%= @order.payment_method_i18n %></th>
          </tr>
          <tr>
            <th>ステータス</th>
            <th><%= @order.status_i18n %></th>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-3 col-lg-3 px-sm-0 border-left ml-2">
      <h3>請求情報</h3>
      <table class="table">
        <tbody>
          <tr>
            <th>商品合計</th>
            <th>¥<%= @order.total_price - @order.postage %></th>
          </tr>
          <tr>
            <th>配送料</th>
            <th><%= @order.postage %></th>
          </tr>
          <tr>
            <th>ご請求額</th>
            <th><%= @order.total_price %></th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-10 px-5 px-sm-0">
      <h3>注文内容</h3>
      <table class="table">
        <thread>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thread>
        <tbody>
          <% @sum = 0 %>
          <% @order_details.each do |order_detail| %>
            <tr>
              <th><%= order_detail.item.name %></th>
              <th><%= order_detail.price %></th>
              <th><%= order_detail.amount %></th>
              <th><%= order_detail.price * order_detail.amount %></th>
            </tr>
          <%# @sum += order_detail.subtotal%>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>