<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h4>商品詳細</h4>
      <%= image_tag @image.item_image, size: "400x300" %>
    </div>

    <div class="col-md-8 mt-4">
      <div class="table">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>

        <tr>
          <td>商品説明</td>
          <td><%= @item.explanation %></td>
        </tr>

        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>

        <tr>
          <td>税込価格(税抜き価格)</td>
          <td><%= @price.add_tax_price.to_s(:dalimited) %></td>
        </tr>
      </div>

      <div class="table">
        <tr>
          <td><%= f.form_with model:@item_new, local:true do |f| %></td>
          <td><%= f.hidden_field :item_id, value: @item.id %></td>
          <td><%= f.select :amount, *[1..10]%></td>
        </tr>
      </div>

    </div>
  </div>
</div>