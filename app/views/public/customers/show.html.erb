<h2>マイページ</h2>
<div class="row">
<h3>
    <strong>登録情報</strong>
</h3>

<div>
    <%= link_to "編集する", customers_information_edit_path %>
</div>



<table>
    <tr>
        <td>氏名</td>
        <td><%= @customer.first_name %></td>
    </tr>
    <tr>
        <td>カナ</td>
        <td><%= @customer.first_name_kana %></td>
    </tr>
    <tr>
        <td>郵便番号</td>
        <td><%= @customer.post_code %></td>
    </tr>
    <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
    </tr>
    <tr>
        <td>電話番号</td>
        <td><%= @customer.phone_number %></td>
    </tr>
    <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
    </tr>
</table>

<div>
    <h3>配送先</h3>
    <p>
        <%= link_to "一覧を見る", addresses_path %>
    </p>
</div>

<div>
    <h3>注文履歴</h3>
    <p>
        <%= link_to "一覧を見る", orders_path %>
    </p>
</div>
</div>