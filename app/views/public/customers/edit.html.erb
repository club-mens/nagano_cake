<div class-"row">
    <h2>会員情報編集</h2>
</div>

<%= form_with model: @customer, url: customers_informaiton_path, method: :patch do |f| %>
    <table>
        <tr>
            <td><%= f.label :name, "氏名" %></td>
            <td><%= f.text_field :last_name %></td>
            <td><%= f.text_field :first_name %></td>
        </tr>
        <tr>
            <td><%= f.label :name, "フリガナ" %></td>
            <td><%= f.text_field :last_name_kana %></td>
            <td><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
            <td><%= f.label :post_code, "郵便番号" %></td>
            <td><%= f.text_field :post_code %></td>
        </tr>
        <tr>
            <td><%= f.label :address, "住所" %></td>
            <td><%= f.text_field :address %></td>
        </tr>
        <tr>
            <td><%= f.label :phone_number %></td>
            <td><%= f.text_field :phone_number %></td>
        </tr>
        <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.text_field :email %></td>
        </tr>
    </table>
    <%= f.submit "編集内容を保存" %>
    <% end %>
    
    <div>
        <%= link_to "退会する", customers_confirm_path %>
    </div>

