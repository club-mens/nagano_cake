<div class="container">
  <div class="row">
    <div class="col-md-5">
      <h4>商品詳細</h4>
      <%= image_tag @item.item_image, size: "400x300" if @item.item_image.attached? %>
    </div>

    <div class="col-md-7 mt-4">
      <table class="table">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>

        <tr>
          <td>商品説明</td>
          <td><%= @item.explanation %></td>
        </tr>

        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>

        <tr>
          <td>税込価格(税抜き価格)</td>
          <td><%= @item.add_tax_price %></td>
        </tr>

        <tr>
          <td>販売ステータス</td>
          <td><%= @item.is_sale %></td>
        </tr>

        <tr>
          <td><%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-link" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
